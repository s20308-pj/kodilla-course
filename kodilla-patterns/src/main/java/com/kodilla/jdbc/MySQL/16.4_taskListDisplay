# TASK 1
SELECT SUMMARY, DESCRIPTION, NAME
FROM issueslists
         JOIN issues i on issueslists.ID = i.ISSUESLIST_ID;

# TASK 2
SELECT SUMMARY, FIRSTNAME, LASTNAME
FROM issues
         JOIN users u on u.ID = issues.USER_ID_ASSIGNED_TO;

# TASK 3
SELECT FIRSTNAME, LASTNAME, COUNT(SUMMARY) AS NUMBERS_OF_TASKS
FROM users u
         JOIN issues i on u.ID = i.USER_ID_ASSIGNED_TO
GROUP BY FIRSTNAME, LASTNAME
HAVING NUMBERS_OF_TASKS >= 1;